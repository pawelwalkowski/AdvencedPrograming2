@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Program> Localizer
@model IEnumerable<AdvancedProgramming_Lesson2.Models.Car>

@{ ViewData["Title"] = "Index"; }

<h1>@Localizer["Car"]</h1>

<p>
    <a asp-action="Create">@Localizer["Create car"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer["Model"]
            </th>
            <th>
                @Localizer["ProductionDate"]
            </th>
            <th>
                @Localizer["Type"]
            </th>
            <th>
                @Localizer["Price"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Model)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductionDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Type)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
        <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
    </td>
</tr>}
    </tbody>
</table>
